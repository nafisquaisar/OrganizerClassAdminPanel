<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.VideoFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               >

               <ImageView
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="@dimen/_30sdp"
                   android:src="@drawable/details"
                   android:layout_gravity="center_vertical"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Fill all the detail"
                   android:textStyle="bold"
                   android:layout_gravity="center_vertical"
                   android:textSize="@dimen/_22sdp"
                   android:layout_marginHorizontal="@dimen/_10sdp"

                   />
           </LinearLayout>
           <EditText
               android:id="@+id/videoTitle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/enter_the_title"
               android:background="@drawable/edittext_bg"
               android:shadowColor="@color/primary"
               android:shadowDy="4"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:elevation="10dp"
               android:padding="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_20sdp"
               />

           <EditText
               android:id="@+id/videoDes"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/enter_the_description"
               android:background="@drawable/edittext_bg"
               android:shadowColor="@color/primary"
               android:shadowDy="4"
               android:inputType="textMultiLine"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:elevation="10dp"
               android:padding="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               />
           <EditText
               android:id="@+id/VideoUrl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:background="@drawable/edittext_bg"
               android:shadowColor="@color/primary"
               android:shadowDy="10"
               android:elevation="10dp"
               android:padding="@dimen/_10sdp"
               android:hint="@string/enter_the_url_of_video"
               android:layout_marginTop="@dimen/_10sdp"
               />


           <Spinner
               android:id="@+id/classspinner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/spinner_bg"
               android:padding="@dimen/_10sdp"
               android:shadowColor="@color/primary"
               android:shadowDy="10"
               android:dropDownVerticalOffset="70dp"
               android:elevation="10dp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:spinnerMode="dropdown" />



           <Spinner
               android:id="@+id/subjectspinner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/spinner_bg"
               android:padding="@dimen/_10sdp"
               android:shadowColor="@color/primary"
               android:shadowDy="10"
               android:elevation="10dp"
               android:dropDownVerticalOffset="40dp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:spinnerMode="dropdown"
               />

           <Spinner
               android:id="@+id/chapterspinner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/spinner_bg"
               android:padding="@dimen/_10sdp"
               android:shadowColor="@color/primary"
               android:shadowDy="10"
               android:elevation="10dp"
               android:dropDownVerticalOffset="40dp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:spinnerMode="dropdown"
               />

           <!--    <Spinner-->
           <!--        android:id="@+id/typespinner"-->
           <!--        android:layout_width="match_parent"-->
           <!--        android:layout_height="wrap_content"-->
           <!--        android:background="@drawable/spinner_bg"-->
           <!--        android:padding="@dimen/_10sdp"-->
           <!--        android:shadowColor="@color/primary"-->
           <!--        android:shadowDy="10"-->
           <!--        android:elevation="10dp"-->
           <!--        android:dropDownVerticalOffset="40dp"-->
           <!--        android:layout_marginHorizontal="@dimen/_10sdp"-->
           <!--        android:layout_marginTop="@dimen/_10sdp"-->
           <!--        android:spinnerMode="dropdown"-->
           <!--        />-->

           <Button
               android:id="@+id/uplaodVideoBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:backgroundTint="@color/primary"
               android:text="Upload Video"
               app:cornerRadius="10dp"
               android:textSize="20sp"
               android:shadowColor="@color/primary"
               android:shadowDy="10"
               android:elevation="10dp"
               android:padding="10dp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               />

       </LinearLayout>
   </ScrollView>
</LinearLayout>