<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/details"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill all the detail"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_22sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dialogAnimationViewNote"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:lottie_rawRes="@raw/pdfbefore"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <TextView
            android:id="@+id/notePdfStatusNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Pdf"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/dialogNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_title"
        android:background="@drawable/edittext_bg"
        android:shadowColor="@color/primary"
        android:shadowDy="4"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:elevation="10dp"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        />



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="@dimen/_10sdp"
       >
       <Button
           android:id="@+id/dialogUplaodNoteBtn"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/primary"
           android:text="Upload"
           app:cornerRadius="10dp"
           android:textSize="20sp"
           android:layout_weight="1"
           android:layout_marginEnd="@dimen/_20sdp"
           android:shadowColor="@color/primary"
           android:shadowDy="10"
           android:elevation="10dp"
           android:padding="10dp"
           />

       <Button
           android:id="@+id/dialogCancelNoteBtn"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/primary"
           android:text="Cancel"
           android:layout_weight="1"
           app:cornerRadius="10dp"
           android:textSize="20sp"
           android:shadowColor="@color/primary"
           android:shadowDy="10"
           android:elevation="10dp"
           android:padding="10dp"
           />
   </LinearLayout>


</LinearLayout>